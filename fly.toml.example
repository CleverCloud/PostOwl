# fly.toml app configuration
#
# See https://fly.io/docs/reference/configuration/ for information about how to use this file.
#

# //// BEGIN EDITS ////
# Choose your application name - it will be available at https://yourapp.fly.dev
app = "yourapp"
# Choose the region to deploy to: https://fly.io/docs/reference/regions/
primary_region = "iad"
# //// END EDITS ////

# Specify the multistage Docker build target
[build]
  build-target = "runner"

# Override the CMD set in Dockerfile so we can migrate the SQLite database
[experimental]
  cmd = ["fly-start.sh"]
  entrypoint = ["sh"]

[env]
  PORT = "3000"

[[mounts]]
  source = "postowl_data"
  destination = "/app/data"

[http_service]
  internal_port = 3000
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 0
